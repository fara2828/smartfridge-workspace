        <Text>네이버 계정으로 로그인</Text>
      </TouchableOpacity>
      <TouchableOpacity style={styles.button} onPress={() => handlePlatformSelect('Google')}>
        <Text>구글 계정으로 로그인</Text>
      </TouchableOpacity>

      {platform === 'Google' && <GoogleLoginComponent /> && console.log('test1') }
      {/* {platform === 'Naver' && <NaverLogin />}
      {platform === 'Kakao' && <KakaoLogin />} */}
    </View>
