WebBrowser.maybeCompleteAuthSession();
const useProxy = true;


// export const handleLogin = async (platform, username, password, navigation) => {
export const handleLogin = async (platform, username, password, navigation, setView) => {
  console.log("[handleLogin] Function called with platform:", platform)  // 로그 추가
  if (platform === 'Kakao') {
    
    setView(<KakaoLoginWebView />); // KakaoLoginWebView를 렌더링하도록 상태를 설정 
    console.log("[handleLogin_KakaoLoginWebView] Function called with platform:", platform)  // 로그 추가
    console.log("[handleLogin_KakaoLoginWebView] Function called with platform:", platform)  // 로그 추가

  } else if (platform === 'Naver') {
    // Naver login logic here
  } else if (platform === 'Google') {
    try {
      const client_id = '254999790304-qj2jpp2crdvd635s5s6lqqbm5fnceuup.apps.googleusercontent.com'; // Replace with your client ID
      const redirectUri = AuthSession.makeRedirectUri({
        native: 'my-app://redirect',
      });

      console.log("Generated redirect URI:", redirectUri);
      const result = await AuthSession.loadAsync({
        authUrl: `https://accounts.google.com/o/oauth2/auth?client_id=${client_id}&redirect_uri=${redirectUri}&scope=profile email`,
      });

      if (result.type === 'success') {
        console.log('Google Sign in:', result.params);
        navigation.navigate('MyPage');
      } else {
        console.log('Google Sign in was cancelled');
      }
    } catch (error) {
      console.log('login: Error:', error.message);
    }
  
  }
  // navigation.navigate('MyPage');

};

const Styles = StyleSheet.create({
  container: {
    flex: 1,
    marginTop: 24,
    backgroundColor: '#fff',
  },    
});